{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/.bin/wdio",
            "sourceMaps": true,
            "args": [
                "--spec",
                "${workspaceRoot}/test/**/*.ts"
            ],
            "env": {
                "DEBUG": "1"
            },
            // "port": 5858,
            "console": "integratedTerminal"
        }
    ]
}